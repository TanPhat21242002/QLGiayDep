
@model List<Sneaker.Models.ChiTietDatHang>

@{
    ViewBag.Title = "ChiTietDH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<br />
<h2 style="text-align:center;font-weight:bold">Chi tiết đơn hàng</h2>

<div style="padding-left:70px">
    <table class="table">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Tên món</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaDonHang</td>
                    <td>@item.SanPham.TenSP</td>
                    <td>@item.SoLuong</td>
                    <td>@item.DonGia</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a style="font-weight:bold;color:black;padding-left:120px" href="@Url.Action("DonDatHang","Admin")"><i class="fa fa-arrow-left"> Trở lại</i></a>
</div>
