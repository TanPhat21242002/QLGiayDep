@model List<Sneaker.Models.ChiTietDatHang>

@{
    ViewBag.Title = "ChiTietDH";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h2 style="text-align:center;font-weight:bold">Chi tiết đơn hàng</h2>

<div style="padding-left:70px">
    <table class="table">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Tên món</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DonDatHang.MaDonHang</td>
                    <td>@item.SanPham.TenSP</td>
                    <td>@item.SoLuong</td>
                    <td>@item.DonGia</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="col-md-offset-6 col-md-12">
    <td>
        <button class="btn btn-primary" style="font-size:20px;" onclick="location.href='@Url.Action("ChiTietKH", "Member", new { id = ViewBag.MaKH })'"><i class="fa fa-info-circle"></i> Quay lại </button>
    </td>
</div>