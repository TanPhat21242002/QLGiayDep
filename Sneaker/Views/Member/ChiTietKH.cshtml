@model Sneaker.Models.KhachHang
@using Sneaker.Models
@{
    ViewBag.Title = "ChiTietKH";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h2 style="text-align:center;font-weight:bold">Chi tiết thông tin cá nhân</h2>

<div style="padding-left:70px">
    <dl class="dl-horizontal">
        <dt>
            Họ tên:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoTen)
        </dd>

        <dt>
            Tài khoản:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TaiKhoan)
        </dd>

        <dt>
            Mật khẩu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MatKhau)
        </dd>

        <dt>
            Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Địa chỉ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChiKH)
        </dd>

        <dt>
            Điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DienThoaiKH)
        </dd>
    </dl>
    <br />
    <a style="font-size:20px;color:black" href="@Url.Action("ChiTietDH", "Member", new { id = Model.MaKH })"><i class="fa fa-info-circle"> Chi tiết đơn hàng </i></a>
    <br />
    <a style="font-size:20px;color:black" href="@Url.Action("SuaKH", "Member", new { id = Model.MaKH })"><i class="fa fa-info-circle"> Sửa thông tin </i></a>
</div>


